package Conditions_and_loops;

import java.util.Scanner;

public class SumOfSeries {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan=new Scanner(System.in);
		int n=scan.nextInt();
		float sum=0;
		
		/*for(float i=1;i<=n;i++)
		{
			sum +=1/i;
		}
		System.out.println(sum);
		*/
		for(float i=1;i<=n;i++)
		{
			if(i %2 ==0)
			{
				sum -= 1/i;
			}
			else
			{
				sum +=1/i;
			}
		}
		System.out.println(sum);
		

	}

}
